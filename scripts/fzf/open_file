#!/usr/bin/env sh

START_PATH=$(pwd)
SELECTED_PATH=$( (
	fd . ~/ ~/Documents ~/Downloads
	echo ~/Documents
	echo ~/Downloads
) | fzf)

# if path is a file, open it in nvim
if [ -f "$SELECTED_PATH" ]; then
	cd "$(dirname "$SELECTED_PATH")" || exit
	nvim "$SELECTED_PATH"
	cd "$START_PATH" || exit
fi

# if path is a directory, open nvim on it
if [ -d "$SELECTED_PATH" ]; then
	cd "$SELECTED_PATH" || exit
	nvim "$SELECTED_PATH"
	cd "$START_PATH" || exit
fi
